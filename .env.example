# Observe Community MCP - Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# REQUIRED: Core Observe API
# ================================
OBSERVE_CUSTOMER_ID=your_customer_id_here
OBSERVE_TOKEN=your_api_token_here
OBSERVE_DOMAIN=observeinc.com

# ================================
# REQUIRED: MCP Authentication
# ================================
# Public key for JWT token verification (get from _secure/public_key.pem)
PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----
your_public_key_content_here
-----END PUBLIC KEY-----"

# ================================
# REQUIRED: Vector Search (Pinecone)
# ================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_DOCS_INDEX=observe-docs
PINECONE_RUNBOOKS_INDEX=observe-runbooks

# ================================
# REQUIRED: Database (Dataset Intelligence)
# ================================
# PostgreSQL password for dataset intelligence storage
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ================================
# OPTIONAL: Enhanced Embeddings
# ================================
# Uncomment to enable OpenAI embeddings for better semantic search
# OPENAI_API_KEY=your_openai_api_key_here

# ================================
# OPTIONAL: Content Directories  
# ================================
# Override default paths (mainly useful for development)
# OBSERVE_DOCS_DIR=./observe-docs
# OBSERVE_RUNBOOKS_DIR=./runbooks