# Observe API Configuration
OBSERVE_CUSTOMER_ID=your_customer_id_here
OBSERVE_TOKEN=your_api_token_here
OBSERVE_DOMAIN=observeinc.com

# Pinecone Vector Database Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_DOCS_INDEX=observe-docs
PINECONE_RUNBOOKS_INDEX=observe-runbooks

# MCP Authentication
PUBLIC_KEY_PEM=your_public_key_here

# Smart Tools Configuration (for LLM-powered features)
SMART_TOOLS_LLM_PROVIDER=anthropic
SMART_TOOLS_API_KEY=your_anthropic_api_key_here
SMART_TOOLS_MODEL=claude-sonnet-4-20250514
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OPAL Memory System Configuration (PostgreSQL)
POSTGRES_PASSWORD=your_secure_postgres_password_here
OPAL_MEMORY_ENABLED=true
OPAL_MEMORY_SIMILARITY_THRESHOLD=0.85
OPAL_MEMORY_MAX_ENTRIES_PER_DATASET=50000
OPAL_MEMORY_CLEANUP_DAYS=90

# Documentation directories (optional - for local development)
OBSERVE_DOCS_DIR=./observe-docs
OBSERVE_RUNBOOKS_DIR=./runbooks